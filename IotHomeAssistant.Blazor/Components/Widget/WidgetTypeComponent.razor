<div class="content-wrapper">
    <div class="widget-types @CssClass row">
        <div class="col-lg-12 nav">
            @foreach (WidgetType item in widgetTypes)
            {
                <a class="nav-link col-xs-6 col-md-4 @(item.Value == Widget.Type ? CssClass : string.Empty)" @onclick="() => OnSelectType(item.Value)">
                    <label><img src="@(item.ImageUrl)" height="90" /></label><br />  
                    <span class="h6">@item.Title</span>
                </a>
            }
        </div>
    </div>
</div>