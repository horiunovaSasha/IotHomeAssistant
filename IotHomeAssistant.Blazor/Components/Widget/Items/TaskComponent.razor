@using IoTHomeAssistant.Domain.Enums;
@using IotHomeAssistant.Blazor.Data;
@inherits BaseItemComponent

@if (WidgetItem.Type == WidgetItemTypeEnum.CustomScript)
{
    <div class="card-wrapper">
        <div class="row">
            <div class="col-12 d-flex justify-content-between">
                <img src="@( WidgetItem.Icon != null ? WidgetItem.Icon.Value : "https://cdn-icons-png.flaticon.com/512/3079/3079162.png")" width="65" />                
                <div class="w-100">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <span class="h5 w-100">@WidgetItem.Title</span>
                            <img src="https://cdn-icons-png.flaticon.com/512/179/179401.png" height="50" />
                            <ItemContextMenuComponent IsPreview="IsPreview"
                                OnEdit="() => OnEditWidget.InvokeAsync()"
                                OnDelete="() => OnDeleteWidget.InvokeAsync()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
