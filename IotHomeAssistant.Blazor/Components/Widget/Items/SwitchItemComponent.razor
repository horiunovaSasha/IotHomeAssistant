@using IoTHomeAssistant.Domain.Enums;
@using IotHomeAssistant.Blazor.Data;
@inherits BaseItemComponent

@if (WidgetItem.Type == WidgetItemTypeEnum.Switcher)
{
    <div class="card-wrapper">
        <div class="row">
            <div class="col-12 d-flex justify-content-between">
                <img src="@(WidgetItem.Icon.Value)" height="65" />
                <div class="w-100">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-between">
                            <span class="h5 w-100">@WidgetItem.Title</span>
                            <span>
                                <SfSwitch CssClass="e-large" @bind-Checked="_isChecked"  ValueChange="Change" TChecked="bool" OnLabel="ON" OffLabel="OFF"></SfSwitch>
                                <ItemContextMenuComponent IsPreview="IsPreview"
                                    OnEdit="() => OnEditWidget.InvokeAsync()"
                                    OnDelete="() => OnDeleteWidget.InvokeAsync()" />
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}