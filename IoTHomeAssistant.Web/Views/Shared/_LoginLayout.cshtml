<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - IoTHomeAssistant.Web</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>
<body style="background: #f5f5f5;">
<nav class="navbar fixed-top border-bottom" style="background: linear-gradient(135deg, #52a0e5 0%, #0856a5 100%);height: 6em">
    <a style="color: white; padding: 10px;font-size: large;">IoT Home Assistant</a>
</nav>
<div>
    @RenderBody()
</div>
<div style="position:absolute;bottom:0;width:100%; height:60px; background: linear-gradient(135deg, #ff9966 0%, #ff5e55 100%);"></div>
 

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js'></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>