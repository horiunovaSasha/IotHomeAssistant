@model List<IoTHomeAssistant.Domain.Entities.Device>
@await Html.PartialAsync("_DeviceModal")
<h2 class="font-weight-bold pb-3">Devices</h2>
<div id="header-btn">
    <a class="add-btn glb-btn" href="#" data-toggle="modal" data-target="#deviceModal">+</a>
</div>
<div class="widget">
    <div class="list-group-item">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Type</th>
                    <th scope="col">Title</th>
                    <th scope="col">Vendor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var device in Model)
                {
                    <tr>
                        <th scope="row">@device.Id</th>
                        <td>@device.Type</td>
                        <td>@device.Title</td>
                        <td>@device.Vendor</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
